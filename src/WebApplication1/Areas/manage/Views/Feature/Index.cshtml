@using Hook.Core.Entities;
@model List<Feature>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}
<h1>Index</h1>

<div class="container-fluid">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Title</th>
                <th scope="col">Icon</th>
                <th scope="col">Actions</th>

               
            </tr>
        </thead>
        <tbody>
          @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th scope="row">@count</th>
                    <td>@item.Title</td>
                    <td>@Html.Raw(item.Icon)</td>
                    <td><a asp-action="update" asp--route-id="@item.Id" class="btn btn-info">Update</a></td>
                    <td><a asp-action="delete" asp--route-id="@item.Id" class="btn btn-danger">Delete</a></td>
                 
                    
                </tr>
            }
           
        </tbody>
    </table>
</div>
