@using Hook.Core.Entities;
@model Feature
<h1>Create</h1>
<div class="container-fluid">
    <form method="post">
        <div class="form-group">
            <label asp asp-for="Title" class="from-label">Title</label>
            <input  asp-for="Title" class="form-control" >
            <span asp-validation-for="Title" class="text-danger"></span>
           
        </div>
        <div class="form-group">
            <label asp asp-for="Description" class="from-label">Description</label>
            <input asp-for="Description" class="form-control">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp asp-for="ButtonName" class="from-label">ButtonText</label>
            <input asp-for="ButtonName" class="form-control">
            <span asp-validation-for="ButtonName" class="text-danger"></span>
        </div>

        <div class="form-group">

            <label asp asp-for="Icon" class="from-label">Icon link</label>
            <input asp-for="Icon" class="form-control">
            <span asp-validation-for="Icon" class="text-danger"></span>
        </div>
       
        <button type="submit" class="btn btn-primary">Create</button>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </form>
</div>